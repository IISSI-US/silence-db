{
    "getAll": {
        "description": "Gets all entries from 'credentials'",
        "route": "/credentials",
        "method": "GET",
        "sql": "SELECT * FROM credentials",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "getById": {
        "description": "Gets an entry from 'credentials' by its primary key",
        "route": "/credentials/$credential_id",
        "method": "GET",
        "sql": "SELECT * FROM credentials WHERE credential_id = $credential_id",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "create": {
        "description": "Creates a new entry in 'credentials'",
        "route": "/credentials",
        "method": "POST",
        "sql": "INSERT INTO credentials (email, role, password_hash) VALUES ($email, $role, $password_hash)",
        "request_body_params": [
            "email",
            "role",
            "password_hash"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "update": {
        "description": "Updates an existing entry in 'credentials' by its primary key",
        "route": "/credentials/$credential_id",
        "method": "PUT",
        "sql": "UPDATE credentials SET email = $email, role = $role, password_hash = $password_hash WHERE credential_id = $credential_id",
        "request_body_params": [
            "email",
            "role",
            "password_hash"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "delete": {
        "description": "Deletes an existing entry in 'credentials' by its primary key",
        "route": "/credentials/$credential_id",
        "method": "DELETE",
        "sql": "DELETE FROM credentials WHERE credential_id = $credential_id",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    }
}