        "sql": "UPDATE subjects SET degree_id = $degree_id, subject_name = $subject_name, acronym = $acronym, credits = $credits, course = $course, subject_type = $subject_type WHERE subject_id = $subject_id",
        "request_body_params": [
            "degree_id",
            "subject_name",
            "acronym",
            "credits",
            "course",
            "subject_type"
        ],
        "auth_required": true,
