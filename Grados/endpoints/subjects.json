        "route": "/subjects",
        "method": "GET",
        "sql": "SELECT * FROM subjects",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "getById": {
        "description": "Gets an entry from 'subjects' by its primary key",
