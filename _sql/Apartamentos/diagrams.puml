@startuml apartamentos-dc
class Usuario {
  dni: String
  nombre: String
  apellidos: String
  correo: String
  contraseña: String
  dirección: String
  teléfono: String
}

class Huésped {
}

class Propietario {
  fCompra: Date
}

class Alojamiento {
  dirección: String
  numDormitorios: Integer
  numBaños: Integer
  ocupaciónMáxima: Integer
}

class Reserva {
  checkIn: Date
  checkOut: Date
  comentario: String [0..1]
  valoración: Integer [0..1]
}

class Foto {
  título: String [0..1]
  foto: Image
}

class ZonaTurística {
  zona: String
}

class Servicio {
  tipoServicio: TipoServicio
  disponible: Boolean
}

enum TipoServicio {
  WiFi
  Piscina
  Garaje
  AireAcondicionado
}



    'Asociaciones
    Usuario <|-- Huésped
    Usuario <|-- Propietario
    Propietario "1" -- "*" Alojamiento : esPropietario >
    Huésped "1" -- "*" Reserva : realiza >
    Alojamiento "1" -- "*" Reserva : esReservado >
    Alojamiento "1" -- "*" Foto : contiene >
    Alojamiento "1" -- "1" ZonaTurística : ubicadoEn >
    Alojamiento "1" -- "*" Servicio : ofrece >
@enduml
